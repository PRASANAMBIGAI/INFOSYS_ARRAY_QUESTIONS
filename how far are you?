#include <stdio.h>
int main()
{
    int N;
    scanf("%d", &N);
    int arr[N]; 
    int sum = 0;
    for (int i = 0; i < N; i++) 
    {
        scanf("%d", &arr[i]);
        sum += arr[i];
    } 
    int floor_avg = sum / N;
    int first = -1, last = -1;
    for (int i = 0; i < N; i++)
     {
        if (arr[i] == floor_avg) 
      {
            if (first == -1)
           {
                first = i;
            }
            last = i;
        }
    }
    if (first == -1 || last == -1 || first == last) 
    {
        printf("-1\n");
    } else
    {
        printf("%d\n", last - first);
    }

    return 0;
}
